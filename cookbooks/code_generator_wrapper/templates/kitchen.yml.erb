---
driver:
  name: vagrant

provisioner:
  name: chef_zero
  always_update_cookbooks: true
  client_rb:
    chef_license: accept-no-persist

verifier:
  name: inspec

platforms:
  - name: ubuntu-16.04
  - name: centos-7

suites:
  - name: default
    run_list:
      - recipe[<%=  cookbook_name %>]
    verifier:
      inspec_tests:
        - test/integration/default
    attributes:
